                    <g opacity="0.08">
                        <circle cx="520" cy="80" r="40" fill="url(#primaryGrad)"/>
                        <circle cx="80" cy="320" r="25" fill="url(#accentGrad)"/>
                        <circle cx="450" cy="350" r="20" fill="url(#successGrad)"/>
